<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigiBarter.Views.RequestApprovalPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" Padding="20" Orientation="Vertical">

            <Label Text="Request for"/>
            <Label x:Name="itemText" FontSize="36" Margin="20,0,20,20"/>


            <Label Text="Trade Request by"/>

            <StackLayout Orientation="Horizontal" Margin="0,10,0,20">
                <Image x:Name="ProfilePicHolder" Source="user.png" WidthRequest="50"/>
                <StackLayout Orientation="Vertical">
                    <Label x:Name="userNameText" Text="UserName" FontSize="Medium"/>
                    <Label x:Name="requestedTimeText" Text="PostedTime" FontSize="Small"/>
                </StackLayout>
            </StackLayout>

            <Button x:Name="ApproveBtn" Text="Approve" BackgroundColor="#00bcd4" Margin="0,30,0,10" Clicked="ApproveBtn_Clicked"/>
            <Button x:Name="DeclineBtn" Text="Decline" BackgroundColor="#009688" Margin="0,30,0,10" Clicked="DeclineBtn_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>